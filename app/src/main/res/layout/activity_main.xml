<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="428dp"
    android:layout_height="926dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
     >

    <TextView
        android:text="로그인"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="16sp"
        android:textColor="#3c3c3c"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:text="이메일"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="271dp"
        android:textSize="16sp"
        android:textColor="#707070"
        />


    <EditText
        android:id="@+id/editText_email_login"
        android:hint="이메일을 입력해 주세요"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="305dp"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textColor="#3c3c3c"
        android:textColorHint="#d6d6d6"
        android:paddingStart="20dp"
        android:background="@drawable/shadow"
        />

    <TextView
        android:text="비밀번호"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="405dp"
        android:textSize="16sp"
        android:textColor="#707070"
        />

    <EditText
        android:hint="비밀번호를 입력해 주세요"
        android:id="@+id/editText_password"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="439dp"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textColor="#3c3c3c"
        android:textColorHint="#d6d6d6"
        android:textFontWeight="10"
        android:paddingStart="20dp"
        android:background="@drawable/shadow"

        />

    <android.widget.Button
        android:text="로그인"
        android:id="@+id/button_login"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="579dp"
        android:layout_width="344dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_round_blue_box"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:text="아직 회원이 아니신가요? 회원가입 하러가기"
        android:id="@+id/registerTextButton"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="683dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="16sp"
        android:textColor="#939393"
        />

</RelativeLayout>